}

.productListTop{
    height: 60rpx;
    width: 750rpx;
    background-color: #fff;
    padding: 14rpx;
    border-bottom: 1px solid #e5e5e5;
}

.spLogo{
     background: url("../../images/gouwulandaihong.png") no-repeat;
     background-size: contain;
     width: 68rpx;
     height: 60rpx;
    position: relative;
}

.spNum{
    font-size: 22rpx;
    color: #fff;
    position: absolute;
    right: 14rpx;
    top: 8rpx;
}

.productText
{
    width: 200rpx;
    height: 60rpx;
    font-size: 30rpx;
    margin-left: 10rpx;
}

.top_text{
    width: 290rpx;
    height: 60rpx;
    margin-left: 24rpx;
}

.emsPrice{
    font-size: 22rpx;
    line-height: 30rpx;
    height: 30rpx;
}

.priceP{
    color: #cba461;
    font-size: 30rpx;
    line-height: 30rpx;
    height: 30rpx;
}
.productListAside{
    width: 180rpx;
    background-color: #eeeeee;
   
}

.productListRight{
    width: 550rpx;
}

.menuType{
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #888;
    font-size: 30rpx;
}

.menuTypeActive{
    background-color: #fff;
}



.selectVipChild{
    width: 110rpx;
    height: 30rpx;
    border: 2rpx solid #cba461;
    color: #cba461;
    
    font-size: 20rpx;
    margin-right: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.selectVipChildActive{
     width: 110rpx;
    height: 30rpx;
    border: 2rpx solid #cba461;
    color: #fff;
    background-color: #cba461;
    text-align: center;
    line-height: 30rpx;
    font-size: 20rpx;
    margin-right: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.hotProductLogo{
    position: absolute;
    right: 0px;
    top: 0px;
    width: 80rpx;
    height: 80rpx;
    background: url("../../images/hot.png") no-repeat;
    background-size: contain;
}


.vipSelect{
    margin: 24rpx 0;
}

.addProductBtn{
    position: absolute;
    right: 0px;
    bottom: 0px;
    width: 30rpx;
    height: 30rpx;
    /*line-height: 30rpx;*/
    /*text-align: center;*/
    background-color: #bbbbbb;
    color: #fff;
    border-radius: 4px;
    display: flex;
    justify-content: center;
    align-items: center;
}




.productMenu{
    width: 100%;
    border-top:4rpx solid #cba461;

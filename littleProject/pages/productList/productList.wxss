.searchLogo{
  background: url("../../images/search.png") no-repeat;
  width: 32rpx;
  height: 32rpx;
  background-size: contain;
  margin-top: 12rpx;
  margin-left: 12rpx;
}

.productListSearchBox{
    width: 400rpx;
    height: 60rpx;
    background-color: #f5f5f5;
    border-radius: 4px;
}




.searchInput{
    margin-top: 6rpx;
    width: 320rpx;
    height: 20rpx;
    line-height: 32rpx;
    font-size: 26rpx;
